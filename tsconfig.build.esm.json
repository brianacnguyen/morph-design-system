{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "esnext"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/__fixtures__/**/*",
    "./src/**/__mocks__/**/*",
    "./src/**/__test__/**/*",
    "./src/**/__tests__/**/*",
    "./src/**/__snapshots__/**/*",
    "./src/**/*.test.ts",
    "./src/**/*.test-d.ts",
    "./src/**/*.test.*.ts"
  ]
}
